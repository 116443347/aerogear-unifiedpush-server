<!-- The Mobile Applications List Partial-->
<div id="mobile-application-variant-table">
    <table class="rcue-table">
        <thead>
            <tr>
                <th>Token</th>
                <th>Device</th>
                <th>Platform</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            {{#each installations }}
                <tr>
                    <td class="token"><div class="token table">{{#linkTo "instance" this}}{{ deviceToken }}{{/linkTo}}</div></td>
                    <td>{{ deviceType }}</td>
                    <td>{{ operatingSystem }}</td>
                    <td>{{ status }}</td>
                </tr>
            {{else}}
                <tr>
                    <td colspan="4">{{#if isLoaded}}No Installations yet{{/if}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

