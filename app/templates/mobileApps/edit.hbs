<!--Template to create/edit a push application-->
<div class="rcue-dialog">
  <header>
    <h1>
      {{#if pushApplicationID}}
          Edit Push Application
      {{else}}
          Create Push Application
      {{/if}}
    </h1>
  </header>
  <div class="rcue-dialog-inner">
     <form {{action "edit" controller target="controllers.mobileAppsIndex" on="submit" }}>
     <fieldset>
       <p>
         <label>Name</label>
         {{input type="text" placeholder="e.g. MyApp" valueBinding="name" classNames="topcoat-text-input" classNameBindings="validationErrors.name:error"}}
       </p>
       <p>
         <label>Description</label>
         {{textarea placeholder="e.g. My new application." valueBinding="description" classNames="topcoat-textarea"}}
       </p>
       <input type="reset" class="topcoat-button" value="Cancel" {{ action "cancel" controller target="controllers.mobileAppsIndex"}}>
        {{#if pushApplicationID}}
          <input type="submit" class="topcoat-button" value="Edit">
        {{else}}
          <input type="submit" class="topcoat-button" value="Create">
        {{/if}}
     </fieldset>
     </form>
  </div>
</div>
